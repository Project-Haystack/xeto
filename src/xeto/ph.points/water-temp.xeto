///////////////////////////////////////////////////////////////////////////
// Abstracts
///////////////////////////////////////////////////////////////////////////

// Point associated with water temperature
WaterTempPoint : NumberPoint <abstract> { 
  water
  temp
  unit: Unit <quantity:"temperature"> "Â°F" 
}

// Sensor for water temperature
WaterTempSensor : WaterTempPoint & SensorPoint <abstract>

// Setpoint for water temperature
WaterTempSp : WaterTempPoint & SpPoint <abstract>


//////////////////////////////////////////////////////////////////////////
// Hot Water Temps
//////////////////////////////////////////////////////////////////////////

// Sensor for Hot Water Temperature Entering a component of a system
HotWaterEnteringTempSensor : WaterTempSensor { hot, entering }

// Sensor for Hot Water Temperature Leaving a component of a system
HotWaterLeavingTempSensor : WaterTempSensor { hot, leaving }

// Setpoint for Hot Water Temperature Leaving a component of a system
HotWaterLeavingTempSp : WaterTempSp { hot, leaving }

// Sensor for Hot Water Temperature Returning from a system
HotWaterReturnTempSensor : HotWaterEnteringTempSensor

// Sensor for Hot Water Temperature Supplied to a system
HotWaterSupplyTempSensor : HotWaterLeavingTempSensor

// Setpoint for Hot Water Temperature Supplied to a system
HotWaterSupplyTempSp : HotWaterLeavingTempSp


//////////////////////////////////////////////////////////////////////////
// Chilled Water Temps
//////////////////////////////////////////////////////////////////////////

// Sensor for Chilled Water Temperature Entering a component of a system
ChilledWaterEnteringTempSensor : WaterTempSensor { chilled, entering }

// Sensor for Chilled Water Temperature Leaving a component of a system
ChilledWaterLeavingTempSensor : WaterTempSensor { chilled, leaving }

// Setpoint for Chilled Water Temperature Leaving a component of a system
ChilledWaterLeavingTempSp : WaterTempSp { chilled, leaving }

// Sensor for Chilled Water Temperature Returning from a system
ChilledWaterReturnTempSensor : ChilledWaterEnteringTempSensor

// Sensor for Chilled Water Temperature Supplied to a system
ChilledWaterSupplyTempSensor : ChilledWaterLeavingTempSensor

// Setpoint for Chilled Water Temperature Supplied to a system
ChilledWaterSupplyTempSp : ChilledWaterLeavingTempSp


//////////////////////////////////////////////////////////////////////////
// Condenser Water Temps
//////////////////////////////////////////////////////////////////////////

// Sensor for Condenser Water Temperature Entering a component of a system
CondenserWaterEnteringTempSensor : WaterTempSensor { condenser, entering }

// Sensor for Condenser Water Temperature Leaving a component of a system
CondenserWaterLeavingTempSensor : WaterTempSensor { condenser, leaving }

// Setpoint for Condenser Water Temperature Leaving a component of a system
CondenserWaterLeavingTempSp : WaterTempSp { condenser, leaving }

// Sensor for Condenser Water Temperature Returning from a system
CondenserWaterReturnTempSensor : CondenserWaterEnteringTempSensor

// Sensor for Condenser Water Temperature Supplied to a system
CondenserWaterSupplyTempSensor : CondenserWaterLeavingTempSensor

// Setpoint for Condenser Water Temperature Supplied to a system
CondenserWaterSupplyTempSp : CondenserWaterLeavingTempSp
